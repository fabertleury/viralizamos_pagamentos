# Environment Variables for Viralizamos Pagamentos Service

# Database Configuration
DATABASE_URL="postgresql://usuario:senha@localhost:5432/viralizamos_pagamentos"

# API Keys (use strong, unique values in production)
ORDERS_API_KEY="your_orders_api_key_here"
PAYMENTS_API_KEY="your_payments_api_key_here"
REPOSICAO_API_KEY="your_reposicao_api_key_here"
MONITORING_API_KEY="your_monitoring_api_key_here"
DIAGNOSTIC_API_KEY="your_diagnostic_api_key_here"

# Provider Specific Keys
FOLLOWERZZ_API_KEY="your_followerzz_api_key_here"
SMMPANEL_API_KEY="your_smmpanel_api_key_here"

# JWT Authentication
# IMPORTANTE: Este valor DEVE ser o mesmo no microserviço de orders!
JWT_SECRET="your_strong_jwt_secret_here"

# API Service URLs
ORDERS_API_URL="https://orders-service-url.example.com"
REPOSICAO_API_URL="https://reposicao-service-url.example.com"

# Application Settings
NODE_ENV="development"
PORT=3000
LOG_LEVEL="info"

# Queue Configuration
QUEUE_ENABLED="true"
QUEUE_INTERVAL=60000  # 1 minute in milliseconds
MAX_RETRIES=3

# Webhook Settings
WEBHOOK_SECRET="your_webhook_secret_here"

# MercadoPago
MERCADOPAGO_ACCESS_TOKEN="TEST-0000000000000000000000000000000000-000000000"
MERCADOPAGO_PUBLIC_KEY="TEST-00000000-0000-0000-0000-000000000000"

# URLs da aplicação
NEXT_PUBLIC_RAILWAY_PUBLIC_DOMAIN="http://localhost:3000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# Versão da aplicação
APP_VERSION="1.0.0"

# URL base para redirecionamentos e callbacks
NEXT_PUBLIC_BASE_URL="http://localhost:3000"
WEBHOOK_URL="https://your-domain.com"

# Never commit this file with actual credentials
# Use .env.example as a template and create a .env file with real values 